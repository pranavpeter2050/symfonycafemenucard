{% extends 'base.html.twig' %}

{% block title %}Hello DishController!{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h3>{{ message }}</h3>
    </div>
{% endfor %}

<br>
<div class="container">
    <h2>Edit Dishes</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Order No.</td>
                <td>Name</td>
                <td>Description</td>
                <td>Price</td>
                <td>Delete</td>
                <td><a href="{{ path('dish.create') }}">Create</a></td>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.description }}</td>
                <td>{{ dish.price }}</td>
                <td><a href="{{ path('dish.remove', {id: dish.id}) }}">x</a></td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
