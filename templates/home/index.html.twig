{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
	<!-- Hero section -->
	<section class="hero-section">
		<div class="hero-slider owl-carousel">
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{ dish1.name }} </span> !</h2>
								<p>{{ dish1.description }}<br>Price: Rs. {{ dish1.price }}</p>
								<a href="{{ path('menu') }}" class="site-btn">MenuCard</a>
								<a href="#" class="site-btn sb-c2">Order Now</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{ asset('uploads/' ~ dish1.image) }}" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{ dish2.name }} </span> !</h2>
								<p>{{ dish2.description }}<br>Price: Rs. {{ dish2.price }}</p>
								<a href="{{ path('menu') }}" class="site-btn">MenuCard</a>
								<a href="#" class="site-btn sb-c2">Order Now</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{ asset('uploads/' ~ dish2.image) }}" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero section end -->
    
{% endblock %}
