{% extends 'base.html.twig' %}

{% block title %}Hello DishController!{% endblock %}

{% block body %}

<br>
<div class="container">
    <h2>Edit Dishes</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Order No.</td>
                <td>Name</td>
                <td>Description</td>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
